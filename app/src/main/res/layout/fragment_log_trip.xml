<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="@android:color/holo_blue_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Create trip"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Title"

            android:textColor="@android:color/white" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/title_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:hint="enter title "
            android:minHeight="40dp"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/loc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"

            android:text="Location"
            android:textColor="@android:color/white" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/loc_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:hint="Location "
            android:minHeight="40dp"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Date"

            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/date_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="enter date "

            android:minHeight="40dp"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/trip_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"


            android:text="Trip Type"
            android:textColor="@android:color/white" />


        <Spinner
            android:id="@+id/type_et"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:entries="@array/type"
            android:hint="type "
            android:lines="1"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <TextView
            android:id="@+id/destination_tv"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Destination "
            android:textColor="@android:color/white" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/dest_et"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="enter Destination "
            android:minHeight="40dp"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/duration_tv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration "
            android:textColor="@android:color/white" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/duration_et"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="enter duration "
            android:minHeight="40dp"
            android:textColor="@android:color/white" />


        <TextView
            android:id="@+id/comment_tv"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:text="Comment "
            android:textColor="@android:color/white" />


        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/comment_et"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="enter comment "
            android:minHeight="40dp"

            android:textColor="@android:color/white" />


        <!--// Title, Date, Trip Type, Destination, Duration,
        Comment, Photo. Trip Type should be confined to the categories of Work/Personal/Commute.-->


        <Button
            android:id="@+id/photoBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="photo "
            android:textColor="@android:color/white" />


        <ImageView
            android:id="@+id/photo_iv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:textColor="@android:color/white" />


        <Button
            android:id="@+id/logBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:text="log"
            android:textColor="@android:color/black" />



        <Button
            android:id="@+id/mapButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:text="show map"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/deleteBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/white"
            android:text="delete"
            android:textColor="@android:color/black"
            android:visibility="gone" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="16dp"


            android:layout_marginTop="12dp"
            android:background="@android:color/white"
            android:text="cancel"
            android:textColor="@android:color/black" />


    </LinearLayout>
</ScrollView>


